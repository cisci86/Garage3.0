@model Garage_2._0.Models.MemberEditviewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Member</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
                <input type="hidden" asp-for="SocialSecurityNumber" />

                <div class="form-group">
                <label asp-for="NameFirstName" class="control-label"></label>
                <input asp-for="NameFirstName" class="form-control" />
                <span asp-validation-for="NameFirstName" class="text-danger"></span>
                </div>

                <div class="form-group">
                <label asp-for="NameLastName" class="control-label"></label>
                <input asp-for="NameLastName" class="form-control" />
                <span asp-validation-for="NameLastName" class="text-danger"></span>
                </div>

                <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary mt-1" />
                <a asp-action="MemberOverviewIndex" class="btn btn-primary mt-1">Cancel</a>
                </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
