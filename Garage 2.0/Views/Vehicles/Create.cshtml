@model Garage_2._0.Models.VehicleCreateViewModel
@inject Garage_2._0.Services.IVehicleTypeSelectListService service

@{
    ViewData["Title"] = "Park Vehicle";
}

<h1>Park Vehicle</h1>

<h4>Vehicle</h4>
<hr />
@if (TempData["message"] != null)
{
    <div class="alert alert-success" id="message">
        <i class="fas fa-check-circle pe-1"></i>@TempData["Message"]
    </div>
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row align-items-end">
                <div class="col">
                    <div class="form-group">
                        <label asp-for="VehicleTypeName" class="control-label"></label>
                        <select asp-for="VehicleTypeName" class="form-select" asp-items="@await service.GetVehicleTypesAsync()"></select>
                        <span asp-validation-for="VehicleTypeName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div>
                        <a asp-action="VehicleTypeCreate" class="btn btn-primary">Add new Vehicle type</a>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="License" class="control-label"></label>
                <input asp-for="License" class="form-control" />
                <span asp-validation-for="License" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MemberId" class="control-label"></label>
                <input asp-for="MemberId" class="form-control"/>
                <span asp-validation-for="MemberId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Wheels" class="control-label"></label>
                <input asp-for="Wheels" class="form-control" />
                <span asp-validation-for="Wheels" class="text-danger"></span>
            </div>
            <div class="form-group mb-1">
                <input id="create" type="submit" value="Park" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="VehiclesOverview" class="btn btn-primary">Back to Garage</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
