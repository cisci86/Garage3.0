@model Garage_2._0.Models.VehicleType

@{
    ViewData["Title"] = "Add Vehicle type";
}

<h1>Add Vehicle type</h1>

<h4>Vehicle Type</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="VehicleTypeCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group mt-1">
                <input type="submit" value="Add Vehicle type" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn-primary btn mt-1" asp-action="Create">Cancel</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
