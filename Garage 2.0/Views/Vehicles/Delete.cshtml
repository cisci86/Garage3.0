@model Garage_2._0.Models.Vehicle
@using Garage_2._0.Models

@{
    ViewData["Title"] = "Check-Out";
}

<h1>Check-Out</h1>

<div>
    <h3>Do you want to Check-Out?&nbsp; </h3>
<form asp-action="">
    <input type="submit" value="Cancel" asp-action="VehiclesOverview" class="btn btn-warning" />
    <input type="submit" value="Without Receipt" class="btn btn-success" asp-action="Delete" />
    <input type="submit" value="With Receipt" class="btn btn-info" asp-action="ReceiptView" asp-route-id="@Model?.License" />
</form>
</div>
<div>

    <h4>Vehicle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Wheels)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Wheels)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ParkingSpot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ParkingSpot)
        </dd>
        <dt class="col-sm-2">
            @ViewbagModel.AmtTitle
        </dt>
        <dd class="col-sm-10">
            @ViewbagModel.amount
        </dd>
    </dl>
</div>
